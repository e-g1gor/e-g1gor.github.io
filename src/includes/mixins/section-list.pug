include a

mixin section_list(content)
  each item in content
    .row.clearfix.layout(class=`layout-${(item.layout || 'left')} border-${item.border || 'no'}`)
      .col-xs-12.col-sm-4.col-md-3.col-print-12.details
        h4(id=item.title)=item.title
        if item.sub_title
          p
            b=item.sub_title
        if item.caption
          p=item.caption
        if item.link
          if item.link_text 
            +a_href(undefined,item.link)=item.link_text
          else
            +a_href(undefined, item.link)
        if item.additional_links
          p.no-print.aditional-links
            each link in item.additional_links
              +a_href("", link.url)
                i(class=link.icon title=link.title)
      .col-xs-12.col-sm-8.col-md-9.col-print-12.content
        if item.quote
          p.quote=item.quote
        p
          | !{item.description}
